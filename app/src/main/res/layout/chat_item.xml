<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_profile_background"
        android:layout_weight=".20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/item_profile_right"
        android:background="@android:color/holo_blue_dark">
        <ImageView
            android:id="@+id/item_profile_picture"
            android:contentDescription="@string/item_profile_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_profile_border"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_name_top"
            android:fontFamily="sans-serif-light"
            android:text="@string/item_default_name"
            android:textSize="@dimen/item_profile_name"/>
        <TextView
            android:id="@+id/item_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_profile_name"
            android:textSize = "@dimen/item_chat_message"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Sample Text"
            />
        <TextView
            android:id="@+id/item_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_profile_name"
            android:layout_marginRight="@dimen/item_time_right"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/item_chat_timestamp"
            android:text="Sample Date"/>
    </RelativeLayout>

</LinearLayout>